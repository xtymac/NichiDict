      "minScore": -8,
      "maxScore": 0,
      "enabled": true,
      "parameters": {
        "rareThreshold": 10000,
        "penaltyRate": 0.001
      }
    },
    {
      "type": "archaicWordPenalty",
      "weight": 1.0,
      "minScore": -12,
      "maxScore": 0,
      "enabled": true,
