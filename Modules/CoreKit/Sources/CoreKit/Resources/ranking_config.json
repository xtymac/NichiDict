    {
      "type": "commonWord",
      "weight": 0.7,
      "minScore": 0,
      "maxScore": 5,
      "enabled": true,
      "parameters": {
        "thresholds": {
          "100": 5.0,
          "500": 3.0,
          "2000": 1.5,
          "5000": 0.5
        }
      }
    },
    {
      "type": "entryType",
