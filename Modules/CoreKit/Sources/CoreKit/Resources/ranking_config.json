      "maxScore": 4,
      "enabled": true,
      "parameters": {
        "scores": {
          "word": 4.0,
          "compound": 2.0,
          "expression": 1.0,
          "phrase": 0.5
        }
      }
    },
    {
      "type": "surfaceLength",
      "weight": 0.5,
      "minScore": -5,
      "maxScore": 0,
