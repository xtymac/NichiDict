      "type": "specializedDomainBucket",
      "priority": 10,
      "enabled": true,
      "parameters": {
        "domainTags": ["medicine", "law", "chemistry", "physics", "mathematics", "computer", "engineering", "biology", "astronomy", "geology", "anatomy", "botany", "zoology", "医学", "法律", "化学", "物理学", "数学", "計算機"]
