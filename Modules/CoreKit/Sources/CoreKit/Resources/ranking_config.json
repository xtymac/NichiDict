      "weight": 1.2,
      "minScore": 0,
      "maxScore": 15,
      "enabled": true,
      "parameters": {
        "smoothing": "sigmoid",
        "midpoint": 5.0
      }
    },
    {
      "type": "posPriority",
      "weight": 0.9,
      "minScore": 0,
      "maxScore": 8,
      "enabled": true,
      "parameters": {
